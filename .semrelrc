{
  "branch": "main",
  "plugins": {
    "commit-analyzer": {
      "name": "default@^1.0.0",
      "options": {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "perf", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" }, // Agregado para commits de build
          { "breaking": true, "release": "major" }
        ]
      }
    },
    "ci-condition": {
      "name": "default"
    },
    "changelog-generator": {
      "name": "default",
      "options": {
        "emojis": "true"
      }
    },
    "provider": {
      "name": "github",
      "options": {
        "github_repository": "tu-usuario/tu-repositorio"
      }
    },
    "files-updater": {
      "names": ["go.mod"]
    }
  }
}
